* @param: aSubString - Specifies the sought-for string.
* @return: true or false depending if coincidence was found*/
function findValueInString(aString, aSubString){
  var Res

  Res = aqString["Find"](aString, aSubString)
  if (Res != -1) {
    return true
  }
  else{
    return false
  }
}

